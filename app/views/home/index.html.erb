<div id="main" class="col-xs-12">
  <h1>Listing users</h1>

  <table class="table table-hover">
    <tr class="info">
      <th>Email</th>
      <th>Date Publised</th>
      <th colspan="2" align="right">Options</th>
    </tr>

    <% @users.each do |user| %>
      <tr data-link="<%= user_path(user) %>">
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{user.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{user.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%= user.email %>
          </span>
        </td>
        <td><%= user.created_at.strftime("%m/%e/%Y at %w:%M %p") %></td>
        <td><%= button_to 'Edit', edit_user_registration_path, method: :get, :class => 'btn btn-info' %></td>
        <td><%= button_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </table>
</div>
