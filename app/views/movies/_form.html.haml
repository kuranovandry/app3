= simple_form_for @movie, class: 'form_horizontal' do |form|
  = form.input :name, class: 'form-control'
  = form.input :description, as: :date, class: 'form-control'
  = form.input :release_date, as: :date, class: 'form-control datepicker'
  = form.select(:category_ids, options_for_select(@categories), {}, {multiple: true})
  = form.submit class: 'btn btn-info'
