= bootstrap_devise_error_messages!
.panel.panel-default
  .panel-heading
    %h4= t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions')
  .panel-body
    = simple_form_for resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, role: "form" } do |f|
      = f.input :email, as: :email, lable: 'Email', autofocus: true, class: "form-control"
      = f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: "btn btn-primary"
