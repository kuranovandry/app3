.panel.panel-default
  .panel-heading
    %h4= t('.title', :resource => resource_class.model_name.human , :default => 'Edit #{resource_name.to_s.humanize}')
  .panel-body
    = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |f|
      .form-group
        = f.input :email, as: :email, lable: 'Email', autofocus: true, class: "form-control"
        = f.input :first_name, lable: 'First Name', class: "form-control"
        = f.input :last_name, lable: 'Last Name', class: "form-control"
        = f.simple_fields_for :addresses do |address_form|
          = address_form.input :city, lable: 'City', class: 'form-control'
          = address_form.input :postal_code, lable: 'Postal Code', class: 'form-control'
          = address_form.input :address, lable: 'Address', class: 'form-control'
      = f.submit t('.update', :default => "Update"), class: "btn btn-primary"
